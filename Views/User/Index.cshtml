@model IEnumerable<ProgramPlatform.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<head>
    <link rel="stylesheet" href="~/css/" />
</head>

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Admin</th>
        <th>2MFA Enabled</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.IsAdmin</td>
            <td>@user.MultiFactor</td>
            <td>
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">View</a>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Archive" asp-route-id="@user.Id" class="btn btn-danger">Archive</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>