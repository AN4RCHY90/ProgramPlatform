@model ProgramPlatform.ViewModels.RoleViewModel

@{
ViewData["Title"] = "Create Role";
var userRoles = ViewBag.UserRoles as List<string>;
var isCommtel = userRoles.Contains("Commtel") || userRoles.Contains("CommtelAdmin");
}

<head>
    <link rel="stylesheet" href="~/css/roles.css" />
</head>

<h2>Create Role</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    @if (isCommtel)
    {
    <div class="form-group">
        <label asp-for="UserType"></label>
        <select asp-for="UserType" class="form-control">
            <option value="">Select User Type</option>
            @foreach (var userType in Enum.GetValues(typeof(ProgramPlatform.Enums.UserTypeEnum)))
            {
            <option value="@userType">@userType</option>
            }
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>
    }

    <div class="form-group">
        <label asp-for="PullDeviceProgramming"></label>
        <select asp-for="PullDeviceProgramming" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="PullDeviceProgramming" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ApiAccess"></label>
        <input asp-for="ApiAccess" class="form-control" type="checkbox" />
        <span asp-validation-for="ApiAccess" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DashboardAccess"></label>
        <input asp-for="DashboardAccess" class="form-control" type="checkbox" />
        <span asp-validation-for="DashboardAccess" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProgrammingRollBack"></label>
        <input asp-for="ProgrammingRollBack" class="form-control" type="checkbox" />
        <span asp-validation-for="ProgrammingRollBack" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActivityLogPermissions"></label>
        <select asp-for="ActivityLogPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="ActivityLogPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CallPointPermissions"></label>
        <select asp-for="CallPointPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="CallPointPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IncomingCallPermissions"></label>
        <select asp-for="IncomingCallPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="IncomingCallPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimePeriodPermissions"></label>
        <select asp-for="TimePeriodPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="TimePeriodPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RelayOpsPermissions"></label>
        <select asp-for="RelayOpsPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="RelayOpsPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SmsCommandsPermissions"></label>
        <select asp-for="SmsCommandsPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="SmsCommandsPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AlertPermissions"></label>
        <select asp-for="AlertPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="AlertPermissions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PanelSettingsPermissions"></label>
        <select asp-for="PanelSettingsPermissions" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(ProgramPlatform.Enums.AccessLevelEnum)))
            {
            <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="PanelSettingsPermissions" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IsArchived" value="false" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
