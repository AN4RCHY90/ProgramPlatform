@model IEnumerable<ProgramPlatform.ViewModels.RoleViewModel>

@{
ViewData["Title"] = "Roles";
}

<head>
    <link rel="stylesheet" href="~/css/roles.css" />
</head>

<h1>Roles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Role Name</th>
        <th>User Type</th>
        <th>Api Access</th>
        <th>Dashboard Access</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var role in Model)
    {
    <tr>
        <td>@role.RoleName</td>
        <td>@role.UserType</td>
        <td>@role.ApiAccess</td>
        <td>@role.DashboardAccess</td>
        <td>
            <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-info">View</a>
            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
